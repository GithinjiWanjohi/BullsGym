<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/recordpic"
        android:orientation="vertical">

        <TextView
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:text="Record Workout"
            android:textColor="@color/green"
            android:textSize="34sp"
            app:fontFamily="@font/nunito_extralight" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/planspic"
        android:orientation="vertical">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:text="Progress Photos"
            android:layout_gravity="end"
            android:textColor="@color/green"
            android:textSize="34sp"
            app:fontFamily="@font/nunito_extralight" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/trainerpic"
        android:orientation="vertical">

        <TextView
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:text="Personal Trainers"
            android:textColor="@color/green"
            android:textSize="34sp"
            app:fontFamily="@font/nunito_extralight" />
    </LinearLayout>

</LinearLayout>